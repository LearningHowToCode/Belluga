<div class="center">
  <h2>Your Lesson History (Student)</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Format</th>
    <th class="center">Location</th>
    <th class="center">Price</th>
    <th class="center">Tutor</th>
    <th class="center">Time of Order</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td class="center"><%= order.listing.format %></td>
    <td class="center"><%= order.listing.location %></td>
    <td class="center"><%= number_to_currency(order.listing.price) %></td>
    <td class="center"><%= order.tutor.name %></td>
    <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
  </tr>
<% end %>
</table>

<br>


<%= link_to new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } do %>
  <i class="glyphicon glyphicon-plus"></i> New Listing
<% end %>